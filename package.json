{
  "private": true,
  "name": "lerna-changelog",
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "init": "npm install && npm run bootstrap",
    "publish": "lerna publish --conventional-commits --skip-npm",
    "publish-ci": "lerna exec -- npm publish",
    "commitizen": "commitizen",
    "commit": "git-cz",
    "backstop": "backstop"
  },
  "dependencies": {
    "backstopjs": "^3.0.36",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "cz-lerna-changelog": "1.2.1",
    "lerna": "^2.5.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
